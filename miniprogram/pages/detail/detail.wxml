<view class="container">
  <view class="header">
    <text class="title">分析详情</text>
    <text class="date">{{date}} {{time}}</text>
  </view>

  <view class="summary">
    <text>{{summary}}</text>
  </view>

  <scroll-view class="content" scroll-y>
    <text>{{content}}</text>
  </scroll-view>

  <view class="copy-btn" bindtap="copyContent">
    <text>一键复制</text>
  </view>
</view>